<h1>Listing prods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prods.each do |prod| %>
  <tr>
    <td><%= prod.name %></td>
    <td><%= prod.price %></td>
    <td><%= link_to 'Show', prod %></td>
    <td><%= link_to 'Edit', edit_prod_path(prod) %></td>
    <td><%= link_to 'Destroy', prod, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Prod', new_prod_path, :class=>"radio button" %>
